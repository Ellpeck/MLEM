<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <VSTestLogger>nunit</VSTestLogger>
        <VSTestResultsDirectory>TestResults</VSTestResultsDirectory>
        <IsPackable>false</IsPackable>
