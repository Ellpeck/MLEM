{
    "metadata": [
        {
            "src": [
                {
                    "src": "../",
                    "files": [
                        "**/MLEM**.csproj"
                    ],
                    "exclude": [
                        "**.FNA.**",
                        "**.KNI.**"
                    ]
                }
            ],
            "dest": "api",
            "properties": {
                "TargetFramework": "net8.0"
            }
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md",
                    "api/**.yml"
                ]
            },
            {
                "files": [
                    "CHANGELOG.md"
                ],
                "src": ".."
            }
        ],
        "resource": [
            {
                "files": [
                    "favicon.ico"
                ]
            },
            {
                "files": [
                    "**"
                ],
                "src": "../Media"
            }
        ],
        "globalMetadata": {
            "_appTitle": "MLEM Documentation",
            "_appLogoPath": "Logo.svg",
            "_appFooter": "<a href=\"https://github.com/Ellpeck/MLEM\">&copy; 2019-2026 Ellpeck</a> &ndash; <a href=\"https://ellpeck.de/impressum\">Impressum</a> &ndash; <a href=\"https://ellpeck.de/privacy\">Privacy</a> &ndash; <a href=\"https://status.ellpeck.de\">Status</a>",
            "_enableSearch": true
        },
        "dest": "_site",
        "template": [
            "default",
            "modern",
            "overrides"
        ]
    }
}
